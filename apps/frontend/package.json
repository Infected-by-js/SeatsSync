{
  "version": "0.1.0",
  "name": "@seats-sync/frontend",
  "description": "Frontend for the SeatsSync project",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc -b && vite build",
    "preview": "vite preview",
    "format": "prettier --write .",
    "lint": "eslint . --fix --ignore-pattern .gitignore",
    "lint-staged": "lint-staged",
    "check-types": "vue-tsc --noEmit"
  },
  "lint-staged": {
    "*.{js,vue}": [
      "prettier --write"
    ],
    "*.ts": [
      "prettier  --parser=typescript --write"
    ]
  },
  "dependencies": {
    "@pdanpdan/vue-keyboard-trap": "^1.2.0",
    "@vueuse/core": "^12.4.0",
    "@vueuse/rxjs": "^12.4.0",
    "@xstate/vue": "^4.0.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "floating-vue": "^5.2.2",
    "pinia": "^2.3.0",
    "qrcode.vue": "^3.6.0",
    "rxjs": "^7.8.1",
    "svg-sprite": "^2.0.4",
    "tailwind-merge": "^2.5.5",
    "tailwindcss": "^4.0.8",
    "vue": "^3.5.12",
    "vue-router": "^4.5.0",
    "xstate": "^5.19.0"
  },
  "devDependencies": {
    "@seats-sync/config": "*",
    "@seats-sync/constants": "*",
    "@seats-sync/logger": "*",
    "@seats-sync/types": "*",
    "@seats-sync/utils": "*",
    "@tailwindcss/vite": "^4.0.8",
    "@types/node": "^22.10.2",
    "@types/svg-sprite": "^0.0.39",
    "@vitejs/plugin-vue": "^5.1.4",
    "@vue/compiler-sfc": "^3.5.13",
    "@vue/tsconfig": "^0.7.0",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.22.0",
    "prettier": "^3.3.3",
    "prettier-plugin-tailwindcss": "^0.6.9",
    "svgo": "^3.3.2",
    "type-fest": "^4.37.0",
    "typescript": "^5.4.3",
    "vite": "^5.4.10",
    "vite-svg-loader": "^5.1.0",
    "lint-staged": "^15.2.10",
    "vue-tsc": "^2.1.8"
  }
}
