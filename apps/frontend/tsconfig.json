{
  "extends": ["@vue/tsconfig/tsconfig.dom.json", "@seats-sync/config/typescript"],
  "compilerOptions": {
    "baseUrl": "./src/",
    "jsx": "preserve",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "paths": {
      "@/*": ["*"]
    },
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.tsbuildinfo"
  },
  "files": [],
  "exclude": ["node_modules", "dist"],
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "src/**/*.js",
    "src/**/*.jsx",
    "*.config.{js,ts,mjs}",
    ".eslintrc.{js,cjs}",
    "vite.config.ts",
    "eslint.config.mjs"
  ]
}
